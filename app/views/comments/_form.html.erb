<%= simple_form_for [@event, comment] do |f| %>
  <div class="form-group <%= bootstrap_has_error(comment, :body) %>">
    <%= f.label :body %>
    <%= f.input :body, as: :text, label: false, class: "form-control", autofocus: true,
                autocomplete: "body", placeholder: "Комментарий" %>
  </div>

  <div class="form-group <%= bootstrap_has_error(comment, :user_name) %>">
    <%= f.label :user_name %>
    <%= f.input :user_name, label: false, class: "form-control", autofocus: true,
                autocomplete: "user_name", placeholder: "Имя" %>
  </div>

  <div class="actions">
    <%= f.submit 'Отправить', class: 'btn btn-primary' %>
  </div>
<% end %>